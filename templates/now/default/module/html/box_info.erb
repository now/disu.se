<dl>
<% unless (ancestors = object.inheritance_tree(true)[1..-1]).empty? and not CodeObjects::ClassObject === object %>
  <dt>Ancestors</dt>
  <dd>
    <ol class="module-list ancestors">
    <% ancestors.each do |e| %>
      <li><p><%= linkify(e) %></p></li>
    <% end %>
    <% if CodeObjects::ClassObject === object %>
      <li><p><%= linkify(P(:Object)) %></p></li>
    <% end %>
    </ol>
  </dd>
<% end %>
<% unless object.mixins(:class).empty? %>
  <dt>Extended by</dt>
  <dd>
    <ol class="module-list extends">
    <% object.mixins(:class).each do |e| %>
      <li><p><%= linkify(e) %></p></li>
    <% end %>
    </ol>
  </dd>
<% end %>
<% unless mixed_into(object).empty? %>
  <dt>Included by</dt>
  <dd>
    <ul class="module-list includers">
    <% mixed_into(object).sort_by{ |e| e.path }.each do |e| %>
      <li><p><%= linkify(e) %></p></li>
    <% end %>
    </ul>
  </dd>
<% end %>
</dl>
